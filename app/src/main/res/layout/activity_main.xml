<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algonquincollege.tabi0011.hilo.MainActivity">

    <TextView
        android:id="@+id/staticGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the number between 1 and 1000!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.388"
        android:layout_above="@+id/inputGuess"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <EditText
        android:id="@+id/inputGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter value"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="223dp"
        android:layout_marginBottom="6dp"
        android:layout_above="@+id/buttonGuess"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="321dp"
        android:layout_marginBottom="132dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonGuess" />

    <Button
        android:id="@+id/buttonGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Guess"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="273dp"
        android:layout_above="@+id/buttonReset"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/staticGuess"
        android:layout_alignParentStart="true"
        android:src="@mipmap/hal_ninethousand" />

</RelativeLayout>
